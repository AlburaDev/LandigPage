---

const servicesData = [
    {
        image: '/LandigPage/cards/corporativo.jpg',
        title: 'Producción de eventos corporativos',
        description: 'Coordinamos experiencias a la medida para empresas: lanzamientos, aniversarios, integraciones y celebraciones internas, ejecutadas con precisión y enfoque estratégico.',
        id:'event'
    },
    {
        image: '/LandigPage/cards/Ferias.jpg',
        title: 'Ferias & convenciones',
        description: 'Montaje y producción de ferias empresariales, comerciales y académicas con diseño, coordinación y gestión de expositores.',
        id:'feria'
    },
    {
        image: '/LandigPage/cards/FiestaEmpresa.png',
        title: 'Fiestas de empresa',
        description: 'Celebraciones internas con identidad, coherencia y alto estándar de ejecución: desde el concepto hasta el último brindis.',
        id:'empresa'
    },
    {
        image: '/LandigPage/cards/Deportivo.jpg',
        title: 'Eventos deportivos',
        description: 'Organización integral de carreras, torneos y activaciones deportivas con enfoque logístico, comunicacional y comercial.',
        id:'deportivo'
    },
    {
        image: '/LandigPage/cards/regalos.jpg',
        title: 'Regalos corporativos & materiales personalizados',
        description: 'Soluciones creativas y funcionales que refuerzan tu marca y transmiten cercanía a través de detalles cuidadosamente seleccionados.',
        id:'regalo'
    },
    {
        image: '/LandigPage/cards/Bodas.jpg',
        title: 'Wedding Planner',
        description: 'Diseñamos bodas memorables y eventos íntimos, cuidando cada detalle para reflejar la esencia de quienes celebran.',
        id:'boda'
    }

];
---
<section id="services" class="w-full px-4 py-8 bg-gradient-to-br  bg-purple-100 rounded-lg shadow-lg">
    <h1 class="text-center text-teal-900 text-4xl sm:text-5xl mb-4">Nuestra oferta de servicios</h1>
    <h3 class="text-center text-teal-700 text-lg sm:text-xl font-medium mb-8">capturamos la esencia de cada ocasión.</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto bg-purple-50 p-6 rounded-lg shadow-lg">
        {servicesData.map((service) => (
            <div
                id={service.id}
                class="group bg-white rounded-lg shadow-md overflow-hidden
                       transform transition-all duration-0 
                       hover:scale-105 hover:shadow-xl
                       focus-within:scale-105 focus-within:shadow-xl
                       active:scale-105 active:shadow-xl
                       focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-opacity-50"
                tabindex="0"
            >
                <img src={service.image} alt={service.title} class="w-full h-48 object-cover"/>
                <div class="p-6">
                    <h4 class="text-xl font-semibold text-teal-800 mb-2">{service.title}</h4>
                    {/* CAMBIO CLAVE AQUÍ: Usamos group-focus-within para mantener la descripción visible */}
                    <div class="description-container max-h-0 overflow-hidden transition-all duration-[2000ms]  group-hover:max-h-screen group-active:max-h-screen group-focus-within:max-h-screen">
                        <p class="text-gray-600 text-base mt-2">{service.description}</p>
                    </div>
                </div>
            </div>
        ))}
    </div>
</section>