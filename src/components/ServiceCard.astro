---
interface Props {
  image: string;
  title: string;
  description: string;
  id: string; // Add an optional ID for unique targeting
}
const { image, title, description, id } = Astro.props;
const uniqueId = id; // This variable isn't strictly necessary if 'id' is directly used
---

<div class="relative">
  <div
    class="group card relative rounded-xl shadow-xl overflow-hidden
           transition-all duration-300 ease-in-out cursor-pointer
           hover:scale-105 hover:shadow-2xl hover:z-40"
    id={uniqueId}
    data-card-id={uniqueId}
  >
    <div
      class="image-area relative h-48 sm:h-56 bg-cover bg-center"
      style={`background-image: url('${image}');`}
      tabindex="0"
      role="button"
      aria-label={`Mostrar detalles de ${title}`}
    >
      <div class="absolute inset-0 bg-black opacity-0 transition-opacity duration-300
                  group-hover:opacity-40"></div>

      <h2 class="absolute inset-x-0 bottom-0 p-4 text-xl font-bold text-center text-white
                 bg-gradient-to-t from-black/80 via-black/40 to-transparent">
        {title}
      </h2>
    </div>

    <div class="description-content bg-white/80 p-4 text-gray-800 flex items-center justify-center text-center
                 max-h-0 opacity-0 overflow-hidden
                 transition-[max-height,opacity] duration-500 ease-in-out
                 group-hover:max-h-96 group-hover:opacity-100">
      <p class="text-md text-justify leading-relaxed">{description}</p>
    </div>

  </div>
</div>