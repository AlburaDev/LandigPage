<header id="mainHeader" class="main-header flex justify-center items-center bg-gradient-to-br bg-white text-center sticky top-0 z-50 rounded-b-2xl transition-all duration-300 py-1 px-6 md:px-8 backdrop-blur-md">
    <div class="container mx-auto flex justify-between items-center relative">
        <a href="/" class="flex justify-center py-1 items-center animate-pulsing ">
            <img src="/LandigPage/assets/AlburaLogo.svg" alt="Logo" class="object-contain w-26 h-10 hover:scale-106 " />
        </a>

        <button id="mobileMenuButton" class="md:hidden p-2 rounded-md text-emerald-700 hover:text-emerald-900 focus:outline-none focus:ring-2 focus:ring-emerald-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>

        <nav id="mainNav" class="hidden md:flex flex-col md:flex-row items-center space-x-0 md:space-x-6 bg-amber-50 md:bg-transparent rounded-lg p-4 md:p-1 shadow-md md:shadow-none absolute md:relative top-full right-0 mt-2 md:mt-0 z-40 w-48 md:w-auto">
            <a href="#services" class="text-lg no-underline transition-colors duration-300 text-emerald-700 hover:scale-105 hover:bg-emerald-50 rounded-2xl px-3 py-2 md:py-0">Servicios</a>
            <a href="/Galería" class="text-lg no-underline transition-colors duration-300 text-emerald-700 hover:scale-105 hover:bg-emerald-50 rounded-2xl px-3 py-2 md:py-0">Galería</a>
             <a href="/About" class="text-lg no-underline transition-colors duration-300 text-emerald-700 hover:scale-105 hover:bg-emerald-50 rounded-2xl px-3 py-2 md:py-0">Quienes somos</a>
            <a href="#contact" class="text-lg no-underline transition-colors duration-300 text-emerald-700 hover:scale-105 hover:bg-emerald-50 rounded-2xl px-3 py-2 md:py-0">Contacto</a>
        </nav>
    </div>
</header>

<script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
        const mobileMenuButton = document.getElementById('mobileMenuButton');
        const mainNav = document.getElementById('mainNav');
        const mainHeader = document.getElementById('mainHeader');

        let lastScrollY = window.scrollY; // Guarda la última posición de scroll
        let headerHeight = mainHeader.offsetHeight; // Obtiene la altura actual del header

        if (mobileMenuButton && mainNav && mainHeader) {
            // Lógica para el menú móvil
            mobileMenuButton.addEventListener('click', function () {
                mainNav.classList.toggle('hidden');
            });

            // Lógica para el header inteligente (scroll up/down)
            window.addEventListener('scroll', () => {
                if (window.scrollY > lastScrollY && window.scrollY > headerHeight) {
                    // Scrolling hacia abajo: esconde el header
                    mainHeader.style.top = `-${headerHeight}px`; // Mueve el header completamente fuera de la vista
                  
                } else {
                    // Scrolling hacia arriba: muestra el header
                    mainHeader.style.top = '0'; // Regresa el header a su posición original
               
                }
                lastScrollY = window.scrollY; // Actualiza la última posición de scroll
            });
        }
    });
</script>