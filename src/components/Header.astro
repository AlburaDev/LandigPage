<header id="mainHeader" class="main-header flex justify-center items-center bg-gradient-to-br from-purple-300/60 to-purple-100/60 text-center sticky top-0 z-50 rounded-b-2xl transition-all duration-300 py-1 px-6 md:px-8 backdrop-blur-md ">
    <div class="container mx-auto flex justify-between items-center relative">
        <a href="/" class="flex justify-center py-1 items-center w-22 h-6 bg-transparent animate-pulsing ">
          <img src="/src/assets/AlburaLogo.svg" alt="Logo" class="object-contain hover:text-teal-700 hover:scale-106 " />
        </a>

        <button id="mobileMenuButton" class="md:hidden p-2 rounded-md text-gray-700 hover:text-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>

        <nav id="mainNav" class="hidden md:flex flex-col md:flex-row items-center space-x-0 md:space-x-6 bg-amber-50 md:bg-transparent rounded-lg p-4 md:p-1 shadow-md md:shadow-none absolute md:relative top-full right-0 mt-2 md:mt-0 z-40 w-48 md:w-auto">
          <a href="#services" class="text-lg no-underline transition-colors duration-300 hover:text-teal-700 hover:scale-105 hover:bg-teal-50 rounded-2xl px-3 py-2 md:py-0">Servicios</a>
          <a href="/Galería" class="text-lg no-underline transition-colors duration-300 hover:text-teal-700 hover:scale-105 hover:bg-teal-50 rounded-2xl px-3 py-2 md:py-0">Galería</a>
          <a href="#contact" class="text-lg no-underline transition-colors duration-300 hover:text-teal-700 hover:scale-105 hover:bg-teal-50 rounded-2xl px-3 py-2 md:py-0">Contacto</a>
        </nav>
    </div>
</header>

<script is:inline>
    // Este script se ejecutará en el lado del cliente (navegador)
    document.addEventListener('DOMContentLoaded', function () {
        const mobileMenuButton = document.getElementById('mobileMenuButton');
        const mainNav = document.getElementById('mainNav');

        if (mobileMenuButton && mainNav) {
            mobileMenuButton.addEventListener('click', function () {
                mainNav.classList.toggle('hidden'); // Alterna la clase 'hidden'
                mainNav.classList.toggle('flex'); // Alterna la clase 'flex'
            });
        }
    });
</script>
<style>
    /* Estilos para el borde redondeado del header */
    header {
        background-color: rgba(255, 255, 255, 0.3); /* Color de fondo con transparencia */
    backdrop-filter: blur(8px);   
    }
</style>
