---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import '@fontsource-variable/quicksand';
interface Props {
	title: string
}
const {title} = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Albura - Fusionamos elegancia, creatividad y planificación estratégica para transformar tus ocasiones especiales en recuerdos imborrables. Nos apasiona crear experiencias personalizadas en bodas, eventos corporativos y diseño floral, capturando la esencia de tus sueños. " />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

	</head>
	
	<body>
	 <Header />
		<slot />
	 <Footer />
	</body>
</html>
