{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "lib/*": ["src/lib/*"],
    },
    "jsxImportSource": "@astrojs/renderer-react"
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
